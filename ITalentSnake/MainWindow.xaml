<Window x:Class="ITalentSnake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITalentSnake"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="Key_KeyDown">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Start Game" Click="StartGame_Click"/>
                <MenuItem Header="Exit Game" Click="ExitGame_Click"/>
            </Menu>
        </DockPanel>
        <Grid Margin="0,27,0,0" Background="Black">
            <Canvas Name="playCanvas" Background="White" HorizontalAlignment="Left" Height="360" Margin="15,15,0,0" VerticalAlignment="Top" Width="640"/>
            <Label Name="scoreLabel" Content="0" Foreground="White" FontSize="40" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="670,15,0,0" VerticalAlignment="Top" Height="360" Width="108"/>
        </Grid>
    </Grid>
</Window>
